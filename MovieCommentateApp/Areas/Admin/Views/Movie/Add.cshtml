@using MovieReviewApp.Models
@model MovieReviewApp.Areas.Admin.Dtos.Movie.CreateMovieDto
@{
    ViewData["Title"] = "Add New Movie";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Add New Movie</h2>

<form asp-action="Add" asp-controller="Movie" asp-area="Admin" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Year" class="control-label"></label>
        <input asp-for="Year" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PosterImage" class="control-label">Poster Image</label>
        <input asp-for="PosterImage" type="file" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="GenreId" class="control-label"></label>
        <select asp-for="GenreId" asp-items="@(new SelectList(ViewBag.Genres, "Id", "Name"))" class="form-control" required>
            <option value="">-- Select Genre --</option>
            @foreach (Genre genre in ViewBag.Genres)
            {
                if (genre.Id == ViewBag.LastQuery.GenreId)
                {
                    <option value="@genre.Id" selected>@genre.Name</option>
                }
                else
                {
                    <option value="@genre.Id">@genre.Name</option>
                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>