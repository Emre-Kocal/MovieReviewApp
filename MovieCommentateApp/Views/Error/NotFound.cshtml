@{
    Layout = "~/Views/Shared/UserLayout.cshtml"; 
    ViewData["Title"] = "Page Not Found"; 
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center">
                <h1 class="display-1 font-weight-bold">404</h1>
                <p class="h2">Page Not Found</p>
                <p class="lead">The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.</p>
                <hr class="my-4">
                <p>
                    Please try checking the URL for error, <a href="javascript:history.back()" class="btn btn-secondary">go back</a>, or head over to the <a href="@Url.Action("Movies", "Movie",new{area=""})" class="btn btn-primary">homepage</a> to choose a new direction.
                </p>
            </div>
        </div>
    </div>
</div>
