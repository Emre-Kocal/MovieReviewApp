@{
    Layout = "~/Views/Shared/UserLayout.cshtml";
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 class="display-1 font-weight-bold">403</h1>
            <p class="h2">Access Denied</p>
            <p class="lead">Sorry, you do not have permission to view this page.</p>
            <hr class="my-4">
            <p>It looks like you might not have the necessary permissions to access this page. If you think this is a mistake, please contact your administrator.</p>
            <a href="@Url.Action("Movies", "Movie")" class="btn btn-primary btn-lg">Go to Home Page</a>
        </div>
    </div>
</div>
