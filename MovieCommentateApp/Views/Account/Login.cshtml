@using MovieReviewApp.Dtos.Account
@model LoginDto
@{
    Layout = "~/Views/Shared/EntryLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="text-center">Login</h2>
        <form method="post" asp-action="Login" asp-controller="Account">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" class="form-control" id="username" placeholder="Enter username" asp-for="Username">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Enter password" asp-for="Password">
            </div>
            @if (ViewData.ModelState.Values.Count() > 0)
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @foreach (var modelState in ViewData.ModelState.Values)
                    {
                        foreach (var error in modelState.Errors)
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    }
                </div>
            }
            <a asp-controller="Account" asp-action="Register">Do not you have an account?</a>
            <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
    </div>
</div>